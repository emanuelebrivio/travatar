@import 'nib'
@import 'rupture'

// Color Palette
_main = #cf212a

// Media query for PureCSS
rupture.scale = 0 35.5em 48em 64em 80em
rupture.scale-names = 'sm' 'md' 'lg' 'xl' 'hd'

// Font
.sans-font
  font-family 'museo-sans', sans-serif

// PureCSS fixes
.pure-g [class *='pure-u'],
.pure-g-r [class*="pure-u"]
  @extends .sans-font
.pure-form
  input[type='text'], input[type='password'], input[type='email'], input[type='url'], input[type='date'], input[type='month'], input[type='time'], input[type='datetime'], input[type='datetime-local'], input[type='week'], input[type='number'], input[type='search'], input[type='tel'], input[type='color'], select, textarea
    @extends .sans-font
  button
    @extends .sans-font
.pure-button
  @extends .sans-font

// Generic
html,
body
  width 100%
  height 100%
  @extends .sans-font
  font-size 1em
  color #FFF
  overflow-x hidden

body
  background url('../img/bg-fullhd.jpg') center no-repeat
  background-size cover

_spacer = 5, 10, 20, 40, 50, 60, 80, 100
for _s in _spacer
  .spacer-{ _s }
    height ( _s * 1px )

.padding
  padding 20px

.hello
  width 100%
  max-width 520px
  text-align center
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

  h1
    font-weight 100
    font-size 1.4rem
    margin 5px 0
    padding 0 20px

  a.logo
    display inline-block
    width 125px
    height 30px
    img
      width @width
      height @height
      display block

  .pure-form
    margin 40px 20px 20px 20px
    background rgba(#6b7594, 0.2)
    border-radius 10px

    .pure-control
      position relative
      input[type='email']
        width 100%
        border none
        border-radius 10px
        box-shadow 0 0 10px rgba(#000, 0)
        background rgba(#FFF, 0.1)
        height 70px
        padding 20px
        font-size 1.2rem
        font-weight 500
        text-align center
        transition background 0.2s ease, box-shadow 0.2s ease

        &:focus
          background rgba(#FFF, 0.15)
          box-shadow 0 0 30px rgba(#000, 0.1)

        &::-ms-clear
          display none

        &::-webkit-input-placeholder
          color rgba(#FFF, 0.5)
          font-weight 300
        &::-moz-placeholder
          color rgba(#FFF, 0.5)
          font-weight 300
        &:-ms-input-placeholder
          color rgba(#FFF, 0.5)
          font-weight 300
        &:-moz-placeholder
          color rgba(#FFF, 0.5)
          font-weight 300

        &:invalid
          color #FFF

      button
        position absolute
        right 10px
        top 50%
        width 30px
        height 30px
        margin-top -(@height / 2)
        outline none
        padding 0
        background none
        border none
        border-radius 5px
        box-shadow none
        transition background 0.2s ease
        &:hover
          background rgba(#FFF, 0.2)
        img
          display block

